<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:text="HỒ SƠ CÁ NHÂN &amp; eKYC"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgAvatar"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#E0E0E0"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btnUploadFace"
            android:text="Tải ảnh xác thực (eKYC)"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Nguyễn Văn A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Mã khách hàng: 0987654321"
            android:textColor="#757575"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="DANH SÁCH TÀI KHOẢN"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:text="Tài khoản thanh toán (Checking)" android:textStyle="bold"/>
            <TextView android:text="Số dư: 10,000,000 VND" android:textSize="16sp" android:textColor="#1976D2"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:background="#E8F5E9"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:text="Tài khoản tiết kiệm (Saving)" android:textStyle="bold"/>
            <TextView android:text="Số dư: 50,000,000 VND" android:textSize="16sp" android:textColor="#388E3C"/>
            <TextView android:text="Lãi suất: 6.5% / năm" android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:background="#FFEBEE"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:text="Tài khoản vay (Mortgage)" android:textStyle="bold"/>
            <TextView android:text="Dư nợ: 200,000,000 VND" android:textSize="16sp" android:textColor="#D32F2F"/>
            <TextView android:text="Thanh toán hàng tháng: 5,000,000 VND" android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            android:text="Quay lại"
            android:backgroundTint="#9E9E9E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>